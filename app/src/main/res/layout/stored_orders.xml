<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storedOrdersPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3A0ED">

    <TextView
        android:id="@+id/storeOrdersText"
        android:layout_width="227dp"
        android:layout_height="66dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/berkshire_swash"
        android:shadowColor="#79BF7C"
        android:text="@string/stored_orders"
        android:textAlignment="center"
        android:textColor="#0FDAAB"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/storeOrdersList"
        android:layout_width="387dp"
        android:layout_height="566dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeOrdersImage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/storeOrdersImage"
        android:layout_width="156dp"
        android:layout_height="161dp"
        android:contentDescription="@string/picture_of_storeOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_485551_200" />

</androidx.constraintlayout.widget.ConstraintLayout>
